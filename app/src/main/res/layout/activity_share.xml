<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.share.ShareActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_base_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <ImageView
                android:src="@drawable/ic_arrow_left"
                android:scaleType="center"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/activity_base_arrow"/>
            <TextView
                android:text="编辑"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#3e3e3e"
                android:layout_marginEnd="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_base_title"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_share_linear"
            android:background="@android:color/white">
            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/activity_share_image"/>
            <TextView
                android:textSize="13sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_share_content" />
            <TextView
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/activity_share_from" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="配图"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/activity_share_photo"/>
        <TextView
            android:text="排版"
            android:gravity="center"
            android:drawableStart="@drawable/ic_division"
            android:drawableEnd="@drawable/ic_division"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/activity_share_typeset" />
        <TextView
            android:text="保存"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/activity_share_save"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>