<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp">
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/fragment_sentence_item_like"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="49dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_sentence_item_content"
            android:layout_marginTop="3dp"
            android:layout_toStartOf="@id/fragment_sentence_item_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_sentence_item_article"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/fragment_sentence_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_sentence_item_writer"
            android:textSize="12sp"
            android:layout_toStartOf="@id/fragment_sentence_item_article"
            android:layout_alignTop="@id/fragment_sentence_item_article"
            android:layout_alignBottom="@id/fragment_sentence_item_article"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</android.support.v7.widget.CardView>